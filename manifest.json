{
    "manifest_version": 3,
    "name": "SafeBrowse",
    "version": "1.0",
    "description": "Save legitimate websites and flag mirror sites",
    "permissions": ["storage", "tabs", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": ["<all_urls>"]
  }
  